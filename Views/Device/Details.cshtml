@model bai_test_1.Models.Device

@{
    ViewData["Title"] = "Chi tiết thiết bị";
}

<h1>Chi tiết thiết bị</h1>

<div class="border p-3 mt-3">
    <dl class="row">
        <dt class="col-sm-3">Tên thiết bị</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Loại</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<div class="form-group mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
