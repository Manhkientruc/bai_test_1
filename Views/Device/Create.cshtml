@model bai_test_1.Models.Device

@{
    ViewData["Title"] = "Thêm thiết bị mới";
}

<h1>Thêm thiết bị mới</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Tên thiết bị</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Loại</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label">Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option>Available</option>
            <option>In-use</option>
            <option>Broken</option>
        </select>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Lưu" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
